{
  "manifest_version": 3,
  "name": "PhishShield - Real-Time Phishing Protection",
  "version": "1.0",
  "description": "Detects phishing URLs and warns users in real time.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
  "16": "icons/icon.png",
  "48": "icons/icon.png",
  "128": "icons/icon.png"
},


  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
